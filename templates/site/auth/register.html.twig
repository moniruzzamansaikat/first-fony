{% extends 'layouts/site.html.twig' %}

{% block content %}

<div class="row py-5">
    <div class="col-md-4 offset-md-4">
        <h2>Register Now</h2>
        {{ form_start(form, {'attr': {'class': 'form'}}) }}
            {{ form_row(form.username) }}
            {{ form_row(form.firstname) }}
            {{ form_row(form.lastname) }}
            {{ form_row(form.password) }}
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
